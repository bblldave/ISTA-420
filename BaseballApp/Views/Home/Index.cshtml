@model IEnumerable<BaseballApp.Models.Schedule>




<div class="jumbotron"></div>



<div class="row">
    <div class="col-md-4">
        <h2>Our Teams</h2>
        <p>
            Homerun League has many teams that play in a tornament style bracket. With multiple games weekly, Homerun league is the supreme league
            for serious players and fans.
        </p>
        <div>
            <p><a class="btn btn-default" href="~/Teams/Index"> View Teams &raquo;</a></p>
        </div>
    </div>
    <div class="col-md-4">
        <h2>Calendar</h2>
        <p>This calendar shows the games that are currently scheduled. It includes all teams and fields. If you want the schedule for
           a specific team, please use the Team's calendar.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">View Calendar &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Apply Now!</h2>
        <p>Interested in playing for one of our teams? If so click below to get added to the roster.</p>
        <p><a class="btn btn-default" href="~/Players/Create">Apply Now! &raquo;</a></p>
    </div>
   
</div>
<div class="upcomingGames">
    <h2>Upcoming Games</h2>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team3.TeamName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team3.TeamName)
                </td>
               
            </tr>
        }
    </table>


</div >





