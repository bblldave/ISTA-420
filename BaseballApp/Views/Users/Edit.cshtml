@model BaseballApp.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ApplicationUser</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p>UserName: @Html.DisplayFor(m => m.UserName)</p>
            <p>Email: @Html.DisplayFor(m => m.Email)</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Roles, htmlAttributes: new { @class = "control-label col-md-2"})
            @Html.DropDownListFor(model => model.Roles.SingleOrDefault().RoleId, (SelectList)ViewBag.RolesSelectListItems, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
